        android:angle="45"
        android:centerX="35%"
        android:centerColor="#AACCB9"
        android:startColor="#0077A2"
        android:endColor="#4CAF50"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="145dp"
        android:height="40dp"
        />
    <stroke
        android:width="3dp"
        android:color="#C0C0C0"
        />
</shape>

